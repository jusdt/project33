<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/iv_icon_alert"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:src="@drawable/ic_warning" />

    <com.trongnhat.nfc_project.view.SecurityTextView
        android:id="@+id/tv_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon_alert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Xoa lich su"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_header" />

    <RelativeLayout
        android:id="@+id/rl_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <View
            android:id="@+id/v_rim_footer"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_rim" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_rim_footer"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp">

            <com.trongnhat.nfc_project.view.SecurityTextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="left"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_footer" />

            <com.trongnhat.nfc_project.view.SecurityTextView
                android:id="@+id/tv_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_footer" />

            <com.trongnhat.nfc_project.view.SecurityTextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="right"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_footer" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>